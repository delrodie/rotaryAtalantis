{% endblock %}

{% block title %}
    Etape 4
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        

        window.addEventListener('DOMContentLoaded', function(){
            var choixOui = document.getElementById('step_five_voulezCommuniquerActivitePro_0');
            var choixNon = document.getElementById('step_five_voulezCommuniquerActivitePro_1');
            var inputTheme = document.getElementById('step_five_themeActivitePro');
            var inputNom = document.getElementById('step_five_nomConferencier');
            var theme = document.getElementById('theme');
            var nom = document.getElementById('nom');
            var contact = document.getElementById('contact');

            function toggleChampsVisible(){
                inputTheme.style.display = choixOui.checked ? "block" : "none";
                inputNom.style.display = choixOui.checked ? "block" : "none";
                theme.style.display = choixOui.checked ? "block" : "none";
                nom.style.display = choixOui.checked ? "block" : "none";
                contact.style.display = choixOui.checked ? "block" : "none";
                //  console.log(affichage)
            }

            toggleChampsVisible();

            choixOui.addEventListener("click", toggleChampsVisible);
            choixNon.addEventListener("click", toggleChampsVisible);
        })

        
    </script>
{% endblock %}
